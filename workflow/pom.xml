		<version.javax.ws.rs.jsr311.api>1.1</version.javax.ws.rs.jsr311.api>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>com.alexnederlof</groupId>
				<artifactId>jasperreports-plugin</artifactId>
				<version>1.6</version>
			</plugin>
		</plugins>
	</build>

	<dependencies>
